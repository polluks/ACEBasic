.key arg

; needs 65k stack
; this must be called from 'make' folder

IF <arg> EQ "all"
  ; make the ACE executable
  ; from N object files.
  echo "Making ACE..."
  copy ACE:bin/ace ACE:bin/ace.old QUIET
  cd ACE:src/ace/obj
  gcc -m68020 -s *.o -noixemul -o ace:bin/ace
  ;orig: blink WITH objs LIB ZC:lib/zc.lib+ZC:lib/ami.lib TO ACE:bin/ace
  cd ///make
ELSE
  ; make an object file.
  cd ACE:src/ace/c
  gcc <arg>.c -m68020 -c -s -O -pedantic -Wcast-qual -noixemul -I. -o ACE:src/ace/obj/<arg>.o
  cd ///make
ENDIF
