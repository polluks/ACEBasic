;BEGIN MUI
if exists "Workbench:System/MUI"
   assign MUI: "Workbench:System/MUI"
   if exists MUI:Libs
      assign add LIBS: MUI:Libs
   endif
   if exists MUI:Locale
      assign add LOCALE: MUI:Locale
   endif
